<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

  <display-name>Scala OAuth Web Application Sample</display-name>

  <servlet>
    <servlet-name>HomeServlet</servlet-name>
    <servlet-class>jp.lpubsppop01.sample.HomeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HomeServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>OAuthClientServlet</servlet-name>
    <servlet-class>jp.lpubsppop01.sample.OAuthClientServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OAuthClientServlet</servlet-name>
    <url-pattern>/oauth</url-pattern>
  </servlet-mapping>

</web-app>
